{
  "name": "RNProjectPattern",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint --config .eslintrc.js './src/**/*.{ts,tsx}'",
    "pretty": "prettier --write --config .prettierrc.js './src/**/*.{ts,tsx}'",
    "clear": "watchman watch-del-all && rm -rf /tmp/metro-bundler-cache-* && rm -rf /tmp/haste-map-react-native-packager-* && react-native start --reset-cache",
    "schema:pull": "apollo client:download-schema src/services/Apollo/graphql-schema.json",
    "schema:types": "apollo codegen:generate --target=typescript --tagName=gql --addTypename --localSchemaFile=src/services/Apollo/graphql-schema.json --globalTypesFile=src/types/graphql-global-types.ts types"
  },
  "dependencies": {
    "@apollo/react-hooks": "^4.0.0",
    "@react-native-community/masked-view": "^0.1.10",
    "@react-navigation/native": "^5.7.6",
    "@react-navigation/stack": "^5.9.3",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link-http": "^1.5.17",
    "graphql": "^15.3.0",
    "graphql-tag": "^2.11.0",
    "i18next": "^19.8.2",
    "react": "16.13.1",
    "react-i18next": "^11.7.3",
    "react-native": "0.63.3",
    "react-native-gesture-handler": "^1.8.0",
    "react-native-localize": "^1.4.2",
    "react-native-reanimated": "^1.13.1",
    "react-native-safe-area-context": "^3.1.8",
    "react-native-screens": "^2.11.0",
    "react-native-svg": "^12.1.0",
    "styled-components": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/runtime": "^7.8.4",
    "@react-native-community/eslint-config": "^1.1.0",
    "@types/jest": "^25.2.3",
    "@types/react-native": "^0.63.2",
    "@types/react-native-dotenv": "0.2.0",
    "@types/react-test-renderer": "^16.9.2",
    "@types/styled-components": "5.1.4",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "babel-jest": "^25.1.0",
    "babel-plugin-module-resolver": "4.0.0",
    "eslint": "^6.5.1",
    "husky": "4.3.0",
    "jest": "^25.1.0",
    "jest-styled-components": "7.0.3",
    "metro-react-native-babel-preset": "^0.63.0",
    "prettier": "2.1.2",
    "react-native-dotenv": "2.4.1",
    "react-native-svg-transformer": "^0.14.3",
    "react-test-renderer": "16.13.1",
    "typescript": "^3.8.3"
  },
  "jest": {
    "preset": "react-native"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run pretty"
    }
  }
}
